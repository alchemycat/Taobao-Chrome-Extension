{
  "name": "Taobao",
  "version": "1.0.0",
  "description": "Extension for Taobao",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "*://s.taobao.com/search?*",
        "*://*.taobao.com/*",
        "*://*.tmall.com/*"
      ],
      "js": [
        "content.js",
        "filter/filter.js",
        "filter/helpers/fetchData.js",
        "filter/helpers/createAlert.js",
        "filter/helpers/getStorageData.js",
        "helpers/addCSS.js",
        "scraper/scraper.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "taobao.png",
    "48": "taobao.png",
    "128": "taobao.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "assets/sprite/sprite.png",
        "assets/sprite/sprite.css",
        "assets/alert/alert.css"
      ],
      "matches": [
        "https://s.taobao.com/*",
        "*://*.taobao.com/*",
        "*://*.tmall.com/*"
      ]
    }
  ],
  "permissions": ["tabs", "storage", "scripting", "commands"],
  "host_permissions": [
    "*://*.taobao.com/*",
    "*://*.tmall.com/*",
    "*://script.google.com/*"
  ],
  "action": {
    "default_title": "Taobao"
  },
  "commands": {
    "scrape-data": {
      "suggested_key": "Ctrl+Shift+V",
      "description": "Start scrape data"
    }
  }
}
