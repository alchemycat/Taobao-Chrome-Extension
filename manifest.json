{
  "name": "Taobao",
  "version": "1.0.0",
  "description": "Extension for Taobao",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "*://s.taobao.com/search?*",
        "*://*.taobao.com/*",
        "*://*.tmall.com/*"
      ],
      "js": [
        "content.js",
        "scraper.js",
        "helpers/fetchData.js",
        "helpers/createAlert.js",
        "helpers/getStorageData.js",
        "helpers/addCSS.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "taobao.png",
    "48": "taobao.png",
    "128": "taobao.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "assets/sprite/sprite.png",
        "assets/sprite/sprite.css",
        "assets/alert/alert.css"
      ],
      "matches": ["https://s.taobao.com/*"]
    }
  ],
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": [
    "*://s.taobao.com/*",
    "*://script.google.com/*",
    "*://*.tmall.com/*"
  ],
  "action": {
    "default_title": "Taobao"
  }
}
